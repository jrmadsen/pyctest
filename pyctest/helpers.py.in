def _get_verbosity():
    '''Determine the verbosity

    Default: 1
    '''
    verbose = os.environ.get("PYCTEST_VERBOSE")
    if verbose is not None:
        verbose = int(verbose)
    else:
        verbose = 1
    return verbose


#-------------------------------------------------------------------------#
#
def _get_verbosity_flag():
    '''Determine the initial verbosity flag based verbose setting

    Default: "-V"
    '''
    verbose = _get_verbosity()
    if verbose < 1:
        return ""
    elif verbose == 1:
        return "-V"
    elif verbose == 2:
        return "-VV"
    elif verbose > 2:
        return "--debug"



