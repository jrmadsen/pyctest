def RemovePath(path):

    """Function for safely removing a folder"""

    try:
        import shutil
        if path is not None and os.path.exists(path):
            if os.path.isdir(path) and path != os.getcwd():
                shutil.rmtree(path)
            else:
                os.remove(path)
    except Exception as e:
        print("non-fatal exception on '{}': {}".format(path, e))


